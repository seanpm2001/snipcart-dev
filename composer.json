{
  "type": "project",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.1",
    "craftcms/cms": "^4.0.0",
    "vlucas/phpdotenv": "^5.4.0",
    "yiisoft/yii2": "^2.0",
    "yiisoft/yii2-shell": "^2.0",
    "fostercommerce/craft-snipcart": "^2.0.0"
  },
  "require-dev": {
    "codeception/codeception": "^4.1.29",
    "codeception/module-asserts": "^1.3.1",
    "codeception/module-phpbrowser": "^1.0.2",
    "codeception/module-rest": "^1.4.2"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "8.1"
    },
    "allow-plugins": {
      "craftcms/plugin-installer": true,
      "yiisoft/yii2-composer": true
    }
  },
  "scripts": {
    "test-api": "./vendor/codeception/codeception/codecept run api",
    "test-browser": "./vendor/codeception/codeception/codecept run acceptance"
  },
  "repositories": [
    {
      "type": "path",
      "url": "plugins/craft-snipcart"
    }
  ]
}
